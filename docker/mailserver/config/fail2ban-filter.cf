# Custom fail2ban filter for SSL/TLS connection errors
# This file will be mounted to /tmp/docker-mailserver/fail2ban-filter.cf

[INCLUDES]
before = common.conf

[Definition]
_daemon = postfix/submissions/smtpd

failregex = ^%(__prefix_line)sSSL_accept error from [^[]*\[<HOST>\].*lost connection$
            ^%(__prefix_line)slost connection after CONNECT from [^[]*\[<HOST>\]

ignoreregex =
