/**
 * CSS++ Theme Enhancements
 *
 * Verbessert bestehende Theme-Elemente mit CSS++ Features
 * Kompiliert zu Standard CSS – kompatibel mit bestehendem SCSS
 */

@import "modules/geometry";
@import "modules/lighting";
@import "modules/audio";

/* ============================================
   ENHANCED BUTTONS
   Erweitert .btn, .btn-secondary aus _components.scss
   ============================================ */

/**
 * Primary Button mit Glow und Audio
 */
.btn-csspp {
  /* CSS++ Features */
  shape: rounded-rect(var(--radius-sm));
  shadow-type: soft;
  glow-color: var(--accent-blue);

  /* Audio (optional, benötigt Runtime) */
  hover-sfx: chime(440Hz, decay: 0.2s);
  click-sfx: click(soft);

  /* Standard CSS (kompatibel mit Theme) */
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  background: var(--accent-blue);
  color: white;
  font-weight: 600;
  text-decoration: none;
  cursor: pointer;
  transition: all 0.3s ease;
  border: none;
}

.btn-csspp:hover {
  /* Verstärkter Glow bei Hover */
  glow-intensity: 0.6;
  transform: translateY(-2px);
}

.btn-csspp:active {
  transform: translateY(0);
}


/* ============================================
   ENHANCED CARDS
   Erweitert bestehende Card-Styles
   ============================================ */

/**
 * Card mit Tiefe und reaktivem Schatten
 */
.card-csspp {
  /* CSS++ Features */
  shape: rounded-rect(var(--radius-lg));
  depth: 0.3rem;
  shadow-type: soft;
  light-intensity: 0.7;

  /* Standard CSS */
  background: var(--bg-1);
  padding: var(--space-6);
  transition: all 0.3s ease;
}

.card-csspp:hover {
  /* Tiefe verstärkt sich bei Hover */
  depth: 0.5rem;
  light-intensity: 0.9;
  transform: translateY(-4px);
}


/* ============================================
   ENHANCED HERO
   Hero-Section mit atmosphärischen Effekten
   ============================================ */

/**
 * Hero mit subtilen Glow-Effekt
 */
.hero-csspp {
  /* CSS++ Features */
  shadow-type: soft;
  light-intensity: 0.8;

  /* Standard CSS */
  position: relative;
  padding: var(--space-18) 0;
  background: linear-gradient(135deg, var(--bg-1), var(--bg-2));
  border-radius: var(--radius-lg);
}

.hero-csspp__title {
  /* Subtiler Text-Glow */
  glow-color: var(--accent-blue);
  glow-intensity: 0.3;

  font-size: clamp(2rem, 5vw, 3.5rem);
  font-weight: 800;
  line-height: 1.2;
  color: var(--text);
}


/* ============================================
   ENHANCED NAVIGATION
   Navigation mit Audio-Feedback
   ============================================ */

/**
 * Nav-Links mit Hover-Sound
 */
.nav-csspp a {
  /* Audio */
  hover-sfx: chime(523Hz, decay: 0.15s);

  /* Standard CSS */
  color: var(--text);
  text-decoration: none;
  padding: 0.5rem 1rem;
  border-radius: var(--radius-sm);
  transition: all 0.2s ease;
}

.nav-csspp a:hover {
  background: rgba(58, 160, 255, 0.12);
  color: var(--accent-blue);
}


/* ============================================
   POST META BADGES
   Reading-Time Badge mit Glow
   ============================================ */

.reading-time-csspp {
  /* CSS++ Features */
  shape: rounded-rect(var(--radius-sm));
  glow-color: var(--accent-green);
  glow-intensity: 0.2;

  /* Standard CSS */
  display: inline-flex;
  align-items: center;
  gap: 0.35rem;
  padding: 0.25rem 0.75rem;
  background: rgba(68, 209, 154, 0.1);
  color: var(--accent-green);
  font-size: 0.875rem;
  font-weight: 600;
}


/* ============================================
   INTERACTIVE ELEMENTS
   Formulare mit Audio-Feedback
   ============================================ */

.input-csspp {
  /* CSS++ Features */
  shadow-type: contact;

  /* Audio */
  focus-sfx: chime(880Hz, decay: 0.1s);

  /* Standard CSS */
  width: 100%;
  padding: 0.75rem 1rem;
  background: var(--bg-2);
  border: 1px solid var(--line);
  border-radius: var(--radius-sm);
  color: var(--text);
  font-size: 1rem;
  transition: all 0.2s ease;
}

.input-csspp:focus {
  border-color: var(--accent-blue);
  box-shadow: 0 0 0 3px rgba(58, 160, 255, 0.15);
  outline: none;
}


/* ============================================
   MOBILE MENU
   Enhanced Mobile Navigation
   ============================================ */

.mobile-menu-csspp {
  /* CSS++ Features */
  shadow-type: soft;
  depth: 0.5rem;

  /* Standard CSS */
  position: fixed;
  top: 0;
  right: 0;
  width: 320px;
  height: 100vh;
  background: var(--bg-1);
  padding: var(--space-6);
  transform: translateX(100%);
  transition: transform 0.3s ease;
  z-index: 9999;
}

.mobile-menu-csspp.is-open {
  transform: translateX(0);
}

.mobile-menu-csspp a {
  /* Audio */
  hover-sfx: chime(440Hz, decay: 0.15s);
  click-sfx: click(soft);

  /* Standard CSS */
  display: block;
  padding: var(--space-3) var(--space-4);
  color: var(--text);
  text-decoration: none;
  border-radius: var(--radius-sm);
  transition: all 0.2s ease;
}

.mobile-menu-csspp a:hover {
  background: rgba(58, 160, 255, 0.12);
  color: var(--accent-blue);
}


/* ============================================
   THEME INTEGRATION
   Nutzt bestehende CSS-Variablen
   ============================================ */

/**
 * CSS++ respektiert Theme-Variablen:
 * - var(--accent-blue), var(--accent-green)
 * - var(--radius-sm), var(--radius-md), var(--radius-lg)
 * - var(--shadow-soft), var(--shadow-hover)
 * - var(--bg-0), var(--bg-1), var(--bg-2)
 * - var(--text), var(--muted)
 * - var(--space-*) System
 */


/* ============================================
   RESPONSIVE ANPASSUNGEN
   ============================================ */

@media (max-width: 768px) {
  .btn-csspp {
    padding: 0.625rem 1.25rem;
    font-size: 0.9375rem;
  }

  .card-csspp {
    padding: var(--space-4);
  }

  /* Reduziere Audio auf Mobile (Performance) */
  .mobile-menu-csspp a {
    hover-sfx: none;
    /* Nur Click-Sound behalten */
  }
}

@media (prefers-reduced-motion: reduce) {
  /* Deaktiviere alle Sounds */
  * {
    hover-sfx: none;
    click-sfx: none;
    focus-sfx: none;
  }
}


/* ============================================
   DARK/LIGHT MODE ANPASSUNGEN
   ============================================ */

html[data-theme='light'] .btn-csspp {
  glow-color: #2563eb; /* Dunkleres Blau für Light Mode */
}

html[data-theme='light'] .card-csspp {
  background: #ffffff;
  shadow-type: soft;
}
