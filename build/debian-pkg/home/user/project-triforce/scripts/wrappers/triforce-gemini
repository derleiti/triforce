#!/bin/bash
# TriForce Gemini CLI Wrapper

TRIFORCE_CONFIG="${TRIFORCE_CONFIG:-$HOME/project-triforce/config/triforce.env}"
[ -f "$TRIFORCE_CONFIG" ] && set -a && source "$TRIFORCE_CONFIG" && set +a

if command -v gemini &> /dev/null; then
    exec gemini "$@"
else
    echo "‚ùå Gemini CLI nicht installiert"
    echo ""
    echo "Installation:"
    echo "  pip3 install --user google-generativeai gemini-cli"
    exit 1
fi
