# Flarum Forum Docker Environment
# IMPORTANT: Never commit this file to version control!
# Copy this file to .env and fill in your values

# Database Configuration
DB_NAME=flarum
DB_USER=flarum
DB_PASS=your_secure_db_password_here
DB_ROOT_PASSWORD=your_secure_root_password_here
DB_PREFIX=flarum_

# Flarum Forum Configuration
FLARUM_URL=https://forum.your-domain.com
FLARUM_TITLE=Your Forum Title

# Flarum Admin Account (created on first start)
FLARUM_ADMIN_USER=admin
FLARUM_ADMIN_PASSWORD=your_secure_admin_password_here
FLARUM_ADMIN_EMAIL=admin@your-domain.com

# Timezone
TZ=Europe/Berlin
